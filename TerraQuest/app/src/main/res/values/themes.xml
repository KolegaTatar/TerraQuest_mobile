<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TerraQuest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:textColorPrimary">@color/black  </item>
        <item name="android:statusBarColor">@color/background_info_bar</item>

    </style>
    <style name="Theme.TerraQuest" parent="Base.Theme.TerraQuest">
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:statusBarColor">@color/background_info_bar</item>

        <!-- Calendar: datePickerDialogTheme musi wskazywaÄ‡ na styl, nie kolor -->
        <item name="android:datePickerDialogTheme">@style/Theme.TerraQuest.DatePicker</item>

        <!-- Kolory Material -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/black</item> <!-- zamiast colorAccent -->

        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>

        <!-- Checkbox -->
        <item name="colorControlActivated">@color/white</item>  <!-- kolor zaznaczonego checkboxa -->
        <item name="colorControlNormal">@color/black</item>     <!-- kolor niezaznaczonego checkboxa -->

        <!--Louding background-->

        <item name="android:windowSplashScreenBackground">@color/background_main</item>

    </style>

    <!-- Definicja stylu dla DatePicker -->
    <style name="Theme.TerraQuest.DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/red</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <style name="Theme.TerraQuest.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">#ff0000</item>
    </style>



    <style name="CustomBottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="itemHorizontalTranslationEnabled">true</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavLabel</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavLabel</item>
    </style>


    <style name="BottomNavLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="MenuHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="MenuSubheader">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="MenuSectionTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="MenuItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="FooterText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>


    <style name="AboutTextH">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="AboutTextp">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="Log_reg_btn" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>