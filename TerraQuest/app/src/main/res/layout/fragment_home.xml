<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nagłówek TerraQuest -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TerraQuest"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="left"
            android:textColor="@color/orange"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oto wyniki twojego wyszukiwania"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Porównujemy ceny pokoi hotelowych na ponad 100 stronach"
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp">

            <TextView
                android:id="@+id/label_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Docelowe miejsce podróży"
                android:textColor="#808080"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/input_destination"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Rzym, Włochy"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:textSize="16sp"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#999999" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="#999999"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data"
                        android:textColor="#808080"
                        android:textSize="14sp"
                        android:layout_marginBottom="0dp"/>

                    <EditText
                        android:id="@+id/editTextDate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="13 maj 2025"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textColorHint="#999999"
                        android:paddingTop="4dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Osoby"
                        android:textColor="#808080"
                        android:textSize="14sp"
                        android:layout_marginBottom="0dp"/>

                    <EditText
                        android:id="@+id/text_people"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="3"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:inputType="numberDecimal"
                        android:textColor="#000000"
                        android:textColorHint="#999999"
                        android:paddingTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button_search"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Szukaj"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_marginTop="24dp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#000000"
                android:background="@drawable/rounded_button" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oferty specjalnie dla Ciebie"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oferty i promocje specjalnie dla ciebie"
            android:textColor="#757575"
            android:layout_marginBottom="24dp"
            android:textSize="18sp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zaoszczędź na podróżach międzynarodowych"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Urlop za granicą taniej niż nad Polskim morzem lub w górach? \nTylko u nas specjalne oferty zagraniczne.Zaoszczędź na podróżach międzynarodowych"
                android:textColor="@color/gray_600"
                android:textStyle="normal"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/learn_more"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Szukaj"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_marginTop="24dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popularne cele podróży"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oferty i promocje specjalnie dla ciebie"
            android:textColor="#757575"
            android:layout_marginBottom="24dp"
            android:textSize="18sp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tylko u nas specjalne oferty zagraniczne."
            android:layout_marginBottom="16dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Karta miasta 1 -->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="12dp"
                    android:layout_marginRight="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/warsaw"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Warszawa"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Polska"
                        android:textSize="12sp"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- Karta miasta 2 -->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="12dp"
                    android:layout_marginRight="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/rome"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rzym"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Włochy"
                        android:textSize="12sp"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- Karta miasta 3 -->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="12dp"
                    android:layout_marginRight="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/paris"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Paryż"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Francja"
                        android:textSize="12sp"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- Możesz dodać więcej kart miast tutaj -->

            </LinearLayout>
        </HorizontalScrollView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Często wyszukiwane"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zaoszczędź na pobytach"
            android:textColor="#757575"
            android:layout_marginBottom="24dp"
            android:textSize="18sp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>



        <!-- Inspiracje -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poszukaj inspiracji na kolejna podróż"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z nami nie ominą cię żadne atrakcje"
            android:textColor="#757575"
            android:layout_marginBottom="24dp"
            android:textSize="18sp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nudzisz się w jednym miejscu? To może podróż przez Hiszpanię? 6 dni, 4 hotele i brak nudy. Idealne dla wszystkich poszukiwaczy przygód."
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>