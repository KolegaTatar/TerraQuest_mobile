<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konto"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Członkowie TerraQuest mają dostęp do specjalnych ofert. Ty też możesz mieć."
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginBottom="24dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="24dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zaloguj się lub utwórz konto"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Warto odwiedzić"
            android:textSize="16sp"
            android:textColor="#424242"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

        <TextView
            android:id="@+id/btn_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pogoda"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingVertical="12dp"
            android:background="@drawable/menu_item_selector"
            android:layout_marginBottom="4dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

        <TextView
            android:id="@+id/btn_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontakt"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingVertical="12dp"
            android:background="@drawable/menu_item_selector"
            android:layout_marginBottom="24dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="O nas"
            android:textSize="16sp"
            android:textColor="#424242"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

        <TextView
            android:id="@+id/btn_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poznaj nas - TerraQuest"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingVertical="12dp"
            android:background="@drawable/menu_item_selector"
            android:layout_marginBottom="4dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

        <TextView
            android:id="@+id/btn_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Centrum Pomocy"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingVertical="12dp"
            android:background="@drawable/menu_item_selector"
            android:layout_marginBottom="4dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

        <TextView
            android:id="@+id/btn_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Polityka Prywatności"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingVertical="12dp"
            android:background="@drawable/menu_item_selector"
            android:layout_marginBottom="24dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nasze produkty"
            android:textSize="16sp"
            android:textColor="#424242"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

        <TextView
            android:id="@+id/btn_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Website App"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingVertical="12dp"
            android:background="@drawable/menu_item_selector"
            android:layout_marginBottom="4dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

        <TextView
            android:id="@+id/btn_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile App"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingVertical="12dp"
            android:background="@drawable/menu_item_selector"
            android:layout_marginBottom="4dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

        <TextView
            android:id="@+id/btn_desktop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desktop App"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingVertical="12dp"
            android:background="@drawable/menu_item_selector"
            android:layout_marginBottom="4dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

        <TextView
            android:id="@+id/btn_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Projekt"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingVertical="12dp"
            android:background="@drawable/menu_item_selector"
            android:layout_marginBottom="24dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created by Wiktor Tatarynowicz, Filip Berg, Jacek Prokop"
            android:textSize="12sp"
            android:textColor="#757575"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>
    </LinearLayout>
</ScrollView>